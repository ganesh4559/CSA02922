#include <stdio.h>
int main()
{
    int a[3]={1,2,3},b[3]={4,5,6},n=3;
    int merged[6];
    for(int i=0;i<n;i++)
    merged[i]=b[n-i-1];
    for( int i=0;i<n;i++)
    merged[n+i]=a[n-i-1];
    printf("merged revese array=\n");
    for(int i=0;i<6;i++)
    printf("%d\n",merged[i]);
    return 0;
}
