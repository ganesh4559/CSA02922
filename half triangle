#include <stdio.h>

int main() 
{ int i,j,n,colums;
printf("enter the  number of colums is = ");
scanf("%d",&n);
colums=1;
for(i=1;i<n*2;i++)
{
    for(j=1;j<=colums;j++)
    {
    printf("* ");
    }
    if(i<n)
    {
        colums++;
    }
    else
    {
        colums--;
    }
    printf("\n ");
}

    return 0;
}
